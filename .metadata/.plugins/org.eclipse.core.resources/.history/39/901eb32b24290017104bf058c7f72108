#include <iostream>
using namespace std;

#pragma pack(push,4)

struct Person{
	char name[50];
	int age;
	double weight;
};


#pragma pack(pop)
int main() {

	cout << sizeof(int[10])<<endl;
	cout << sizeof(int)<<endl;
	cout << sizeof(double)<<endl;
	cout << sizeof(string)<<endl;
	cout << sizeof(Person)<<endl;
	return 0;
}
