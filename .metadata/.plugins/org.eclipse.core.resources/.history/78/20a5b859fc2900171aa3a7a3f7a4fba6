#include <iostream>
using namespace std;

class Test{
private:
	static const int b;
	int id;
	string name;

public:
	Test(): id(0),name(""){

	}

	Test(int id, string name): id(id), name(name){

	}

	void print() {
		cout << id << ": " << name << endl;
	}

	const Test &operator=(const Test &other){
		//other.id=10;
		id = other.id+1;
		name = other.name;

		return *this;
	}
//	Test operator++(Test other){
//
//	}
};

int main() {

	Test test1(10,"Mike");
	test1.print();

	Test test2(20,"Bob");


	test2.operator=(test1);
	test2.print();

	Test test3(30,"Charles");

	test3=test2;



	return 0;
}
