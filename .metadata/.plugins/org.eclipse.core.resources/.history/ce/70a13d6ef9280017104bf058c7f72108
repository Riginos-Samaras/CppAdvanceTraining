#include <iostream>
using namespace std;

class Cow{
	int mooCount;
}

int main() {

	//int ref
	int i = 51;
	int &j =i;
	j=71;
	cout <<i<<endl;

	//class ref
	Cow betsy;
	betsy.mooCount=19;
	Cow & c= betsy;
	c.mooCount=20;
	cout<<betsy.mooCount<<endl;


	return 0;
}
